# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.NotesController.home()

GET     /view/:id                   controllers.NotesController.view(id: Integer)

POST    /create                     controllers.NotesController.create()

PATCH   /update/:id                 controllers.NotesController.update(id: Integer)

DELETE  /remove/:id                 controllers.NotesController.remove(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
